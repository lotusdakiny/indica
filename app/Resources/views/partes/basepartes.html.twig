{# app/Resources/views/default/index.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
						
	{% include 'accessory/menu.html.twig' with {'preCuest': 1} %}
	
	{% block submenu %}
	{% endblock %}
	
	<div class="tab-content" id="myTabContent">
		<div class="tab-pane fade in active" role="tabpanel" id="cuestionario" aria-labelledby="home-tab">
		
			{% if form is defined %}		
		
				{{ form_start(form, {'attr': {'class': 'form-horizontal', 'id': 'form'}}) }}
				{{ form_errors(form) }}
					
					{% block form %}
					{% endblock form %}
										
					<!-- BUTTON -->
					<div class="form-block button-block">
						<!-- Button (Double) -->
						<div class="form-group" style="margin-bottom:0;">
							<div class="col-xs-12 col-md-8 show-grid">
								<button type="submit" id="button1id" name="button1id" class="col-xs-12 col-sm-12 btn btn-sample btn-lg">Guardar este parte del formulario</button>												
							</div>
							<div class="col-xs-12 col-md-4">
								<button type="reset" id="button2id" name="button2id" class="col-xs-12 col-sm-12 btn btn-default" style="margin-top: 6px;">Borrar el formulario</button>
							</div>
						</div>
					</div>
				{{ form_end(form) }}			
	    	
			{% elseif datos is defined %}

				{% block datos %}
				{% endblock datos %}		
	
			{% endif %}
				
		</div>
	</div>

{% endblock %}