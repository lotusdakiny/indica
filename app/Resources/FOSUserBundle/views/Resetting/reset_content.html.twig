{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset form-horizontal' } }) }}
    	
	<div class="form-group">
	    <label class="col-md-4 control-label" for="textinput">{{ form_label(form.plainPassword.first) }}</label>
	    <div class="col-md-8">
	    	{{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control input-md'}}) }}
	    	{{ form_errors(form, {'attr': {'class': 'form-error'}}) }}
	    </div>
	</div>
	
	<div class="form-group">
	    <label class="col-md-4 control-label" for="textinput">{{ form_label(form.plainPassword.second) }}</label>
	    <div class="col-md-8">
	    	{{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control input-md'}}) }}
	    	{{ form_errors(form, {'attr': {'class': 'form-error'}}) }}
	    </div>
	</div>

    <!-- Button -->
    <div class="form-group">
    	<label class="col-md-4 control-label" for="textinput"></label>
        <div class="col-md-8">
            <button type="submit" id="button1id" name="button1id" class="btn btn-sample btn-md col-md-12 col-xs-12">
				{{ 'resetting.reset.submit'|trans }}
			</button>
        </div>
    </div>	

{{ form_end(form) }}



